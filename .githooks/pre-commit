#!/bin/sh
# Cross-platform hook runner: prefer pwsh, fall back to powershell
if command -v pwsh >/dev/null 2>&1; then
  pwsh -NoProfile -ExecutionPolicy Bypass -File ".githooks/pre-commit.ps1" || exit $?
else
  powershell -NoProfile -ExecutionPolicy Bypass -File ".githooks/pre-commit.ps1" || exit $?
fi
